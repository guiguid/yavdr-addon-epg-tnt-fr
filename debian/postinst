#!/bin/sh

case "$1" in
    configure)

        chmod +x /var/lib/vdr/epg/*
        
	
        echo "# Update EGP # yavdr-addon-epg-tnt-fr
        15 20 */2 * * vdr /bin/bash /var/lib/vdr/epg/update-epg.sh # yavdr-addon-epg-tnt-fr " >> /etc/crontab
        
        ;;


esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

exit 0

#DEBHELPER#
